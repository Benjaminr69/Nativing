<%= form_for @message, url: become_coach_url do |f| %>
  <%= notice %>
  <%= @message.errors.full_messages.join(', ') %>

  <%= f.text_field :fname, :value => @fname, placeholder: 'Prénom' %>
  <%= f.phone_field :phone, placeholder: 'Téléphone' %>  
  <%= f.email_field :email, placeholder: 'Email' %>
  <%= f.text_area :body, placeholder: 'Votre demande' %>
  <%= f.submit 'Envoyer' %>
<% end %>